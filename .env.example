# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: Supabase Service Role Key (for admin operations)
# ⚠️ DANGER: Never expose this in client-side code
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Google Sheets Integration
GOOGLE_SHEETS_ID=your-google-spreadsheet-id
GOOGLE_SERVICE_ACCOUNT_KEY=your-google-service-account-json-key

# Optional: Google Service Account Key File Path (alternative to JSON key)
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=path/to/service-account.json

# Environment
NODE_ENV=development

# Optional: Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Optional: Error Reporting (Sentry, etc.)
SENTRY_DSN=your-sentry-dsn

# Optional: Custom Domain
NEXT_PUBLIC_APP_URL=http://localhost:3000